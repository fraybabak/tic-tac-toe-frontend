<div class='flex items-center'>
  <div class='bg-white p-8 rounded min-w-[400px]'>
    <div class='flex flex-col'>
      <div class='relative overflow-x-auto shadow-md sm:rounded-lg'>
        <table
          class='w-full text-sm text-left text-gray-500 dark:text-gray-400'
        >
          <thead
            class='text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400'
          >
            <tr>
              <th scope='col' class='px-6 py-3'>Player One</th>
              <th scope='col' class='px-6 py-3'>Player Two</th>
              <th scope='col' class='px-6 py-3'>Winner ID</th>
              <th scope='col' class='px-6 py-3'>Status</th>
              <th scope='col' class='px-6 py-3'>Game Type</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.games as |game index|}}
              <tr
                class='bg-white border-b light:bg-gray-800 light:border-gray-700 hover:bg-gray-50 light:hover:bg-gray-600'
              >
                <td class='px-6 py-4'>{{game.player_one_name}}</td>
                <td class='px-6 py-4'>{{game.player_two_name}}</td>
                <td class='px-6 py-4'>{{game.winner_name}}</td>
                <td class='px-6 py-4'>{{game.status}}</td>
                <td class='px-6 py-4'>{{game.game_type}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <div class='pagination flex items-center justify-between p-4 gap-4'>
      <div class='flex items-center gap-2'>
        <button
          class='pagination-button bg-blue-400 text-white px-4 py-2 rounded' disabled={{not this.showPreviousPage}} type="button" {{on 'click' this.previousPage}}
        >
          Prev
        </button>
        <span class='current-page mx-4'>{{this.currentPage}}</span>
        <button
          class='pagination-button bg-blue-400 text-white px-4 py-2 rounded' disabled={{not this.showNextPage}} type="button" {{on 'click' this.nextPage}}
        >
          Next
        </button>
      </div>
      <div>
        <HomeButton>
          Home
        </HomeButton>
      </div>
    </div>
  </div>
</div>