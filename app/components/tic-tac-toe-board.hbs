
<div class="flex flex-col">
    {{#each this.board as |row rowIndex|}}
    <div class="flex">
        {{#each row as |cell cellIndex|}}
        <div class="border border-black text-5xl text-center cursor-pointer p-4" {{on "click" (fn this.onClickCell
            rowIndex cellIndex)}}>
            {{cell}}
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>